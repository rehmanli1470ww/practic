<UserControl x:Class="practic.UserControllers.UCSpecialTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:practic.UserControllers"
             mc:Ignorable="d" 
             Name="UCTextbox"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Height="30" Width="300" Orientation="Horizontal" Background="White">
        <Label Width="70" Content="{Binding ElementName=UCTextbox, Path=Header}"/>
        <TextBox Width="250" Margin="10,0,0,0"/>
    </StackPanel>
</UserControl>
